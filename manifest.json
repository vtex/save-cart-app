{
  "name": "savecart",
  "vendor": "vtex",
  "version": "0.1.1",
  "title": "Save Cart",
  "description": "Save Cart",
  "defaultLocale": "pt-BR",
  "credentialType": "absolute",
  "registries": [
    "smartcheckout"
  ],
  "categories": [
    "smartcheckout"
  ],
  "dependencies": {
    "vtex.checkout": "0.x",
    "vtex.admin": "1.x",
    "vtex.render-runtime": "7.x"
  },
  "builders": {
    "graphql": "1.x",
    "node": "3.x",
    "react": "2.x",
    "pages": "0.x"
  },
  "scripts": {
    "postreleasy": "vtex publish"
  },
  "supportWorkspaces": true,
  "billingOptions": {
    "free": true
  },
  "policies": [
    {
      "name": "read-workspace-apps"
    },
    {
      "name": "colossus-write-logs"
    },
    {
      "name": "vbase-read-write",
      "attrs": {
        "bucket": "savecart"
      }
    },
    {
      "name": "AcessaTodosPedidos"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.vtexcommercestable.com.br",
        "path": "/api/dataentities/cart/*"
      }
    },
    {
      "name": "AdminPortal"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.vtexcommercestable.com.br",
        "path": "/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "vtexid.vtex.com.br",
        "path": "/api/vtexid/pub/authenticated/user"
      }
    },
    {
      "name": "OMSViewer"
    },
    {
      "name": "POWER_USER_DS"
    }
  ],
  "settingsSchema": {
		"title": "Save Cart",
		"type": "object",
		"properties": {
			"adminSetup": {
				"title": "Save Cart Settings",
				"type": "object",
				"properties": {
					"cartName": {
						"title": "Save Cart Button Name",
						"type": "string"
					},
					"cartLifeSpan": {
						"title": "Lifespan (in days) of saved cart",
						"type": "number",
						"minimum": 1
					}
				},
				"required": [
					"cartName",
					"cartLifeSpan"
				]
			}
		},
		"required": [
			"adminSetup"
		]
	},
	"settingsUiSchema": {
		"ui:order": [
			"adminSetup"
		],
		"adminSetup": {
			"ui:order": [
				"cartName",
				"cartLifeSpan"
			]
		}
	}
}
